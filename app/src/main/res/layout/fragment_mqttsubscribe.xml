<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.beia.VLC.MQTTSubscribeAndPublishFragment"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <Button
        android:id="@+id/fabConnect"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:text="PaginÄƒ conectare" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selectare senzori"
        android:layout_marginTop="70dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Switch
        android:id="@+id/swTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:text="Temperatura"
        android:textOff="Off"
        android:textOn="On" />

    <Switch
        android:id="@+id/swLumina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="100dp"
        android:text="Lumina"
        android:textOff="Off"
        android:textOn="On" />
    <Switch
        android:id="@+id/swMiscare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="100dp"
        android:text="Miscare"
        android:textOff="Off"
        android:textOn="On" />
    <Switch
        android:id="@+id/swPraf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="130dp"
        android:text="Praf"
        android:textOff="Off"
        android:textOn="On" />
    <Switch
        android:id="@+id/swSunet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="130dp"
        android:text="Sunet"
        android:textOff="Off"
        android:textOn="On" />

    <Button
        android:id="@+id/fabPublicare"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="130dp"
        android:background="@color/blue"
        android:text="Salvare" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:layout_marginTop="190dp"
        android:text="Topic"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/editTextSubscribeTopic"
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="60dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:text="vlc/date"
        />
    <Button
        android:id="@+id/fabSubscribeToTopic"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="230dp"
        android:background="@color/blue"
        android:text="Abonare" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </TableRow>






            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5">


                    <GridView
                        android:id="@+id/listViewMessages"
                        android:layout_width="match_parent"
                        android:layout_height="500dp" />
                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
